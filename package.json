{
  "name": "tester",
  "main": "./lib/tester",
  "version": "0.1.0",
  "description": "A short description of your package",
  "keywords": [],
  "repository": "https://github.com/yacut/tester",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    },
    "tester": {
      "versions": {
        "^1.0.0": "consumeTester"
      }
    }
  },
  "dependencies": {
    "ansi-to-html": "^0.6.0",
    "atom-package-deps": "^4.4.1",
    "atom-space-pen-views": "^2.2.0",
    "sb-debounce": "^1.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.22.0",
    "eslint": "^3.16.1",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.40.0"
  },
  "configSchema": {
    "testOnChange": {
      "title": "Test on Change",
      "description": "Test files while typing, without the need to save?",
      "type": "boolean",
      "default": true,
      "order": 1
    },
    "testOnChangeInterval": {
      "title": "Test on Change",
      "description": "For how many seconds should the tester wait?",
      "type": "integer",
      "default": 1,
      "order": 2
    },
    "testOnOpen": {
      "title": "Test on Open",
      "description": "Test files on open?",
      "type": "boolean",
      "default": true,
      "order": 3
    },
    "messageTimeout": {
      "title": "Output view timeout",
      "description": "For how many seconds should the output view above the status-bar stay open?",
      "type": "integer",
      "default": 5,
      "order": 4
    },
    "gutterPosition": {
      "title": "Gutter Position",
      "description": "Position of Gutter Highlights?",
      "enum": ["Left", "Right"],
      "type": "string",
      "default": "Left",
      "order": 5
    },
    "gutterEnabled": {
      "title": "Gutter Enabled",
      "description": "Highlight Error Lines in Gutter?",
      "type": "boolean",
      "default": true,
      "order": 6
    }
  }
}
