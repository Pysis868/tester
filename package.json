{
  "name": "tester",
  "main": "./lib/tester",
  "author": "yacut",
  "version": "0.3.4",
  "description": "A interactive test runner with IDE based Feedback",
  "keywords": [
    "test",
    "tester",
    "testing",
    "interactive",
    "mocha",
    "wallaby.js"
  ],
  "repository": "https://github.com/yacut/tester",
  "bugs": {
    "url": "https://github.com/yacut/tester/issues"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "scripts": {
    "test": "(apm test) && (flow check) && (eslint . )"
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    },
    "tester": {
      "versions": {
        "^1.0.0": "consumeTester"
      }
    }
  },
  "dependencies": {
    "ansi-to-html": "^0.6.0",
    "atom-package-deps": "^4.4.1",
    "atom-space-pen-views": "^2.2.0",
    "glob-to-regexp": "^0.3.0",
    "lodash": "^4.17.4",
    "sb-debounce": "^1.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.22.0",
    "eslint": "^3.16.1",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.40.0",
    "jasmine-fix": "^1.0.1"
  },
  "configSchema": {
    "testOnChange": {
      "title": "Test on Change (if test provider support it)",
      "description": "Test files while typing, without the need to save? (restart required)",
      "type": "boolean",
      "default": false,
      "order": 1
    },
    "testOnChangeInterval": {
      "title": "Test on Change Interval",
      "description": "For how many seconds should the tester wait?",
      "type": "integer",
      "default": 1,
      "order": 2
    },
    "testOnOpen": {
      "title": "Test on Open",
      "description": "Test files on open?",
      "type": "boolean",
      "default": true,
      "order": 3
    },
    "testOnSave": {
      "title": "Test on Save",
      "description": "Test files on save?",
      "type": "boolean",
      "default": true,
      "order": 4
    },
    "messageTimeout": {
      "title": "Output view timeout",
      "description": "For how many seconds should the output view above the status-bar stay open?",
      "type": "integer",
      "default": 5,
      "order": 5
    },
    "showOutputAfterTestRun": {
      "title": "Show output after test run",
      "description": "Show output after test run?",
      "type": "boolean",
      "default": false,
      "order": 6
    },
    "gutterPosition": {
      "title": "Gutter Position",
      "description": "Position of Gutter Highlights?",
      "enum": [
        "Left",
        "Right"
      ],
      "type": "string",
      "default": "Right",
      "order": 7
    },
    "gutterEnabled": {
      "title": "Gutter Enabled",
      "description": "Highlight Error Lines in Gutter?",
      "type": "boolean",
      "default": true,
      "order": 8
    },
    "ansiToHtml": {
      "title": "Convert ansi console output to html",
      "description": "If console output has ansi colors should it convert to html colors?",
      "type": "boolean",
      "default": true,
      "order": 9
    },
    "showInlineError": {
      "title": "Show errors inline after test run",
      "description": "Should show errors in text editor after test run?",
      "type": "boolean",
      "default": false,
      "order": 10
    },
    "inlineErrorPosition": {
      "title": "Inline error position",
      "description": "Should show errors in text editor after or before test case?",
      "type": "string",
      "enum": [
        "after",
        "before"
      ],
      "default": "after",
      "order": 11
    },
    "showNotifications": {
      "title": "Show notifications after test run",
      "description": "Should show notifications after test run if editor not active?",
      "type": "boolean",
      "default": true,
      "order": 12
    },
    "experimental": {
      "order": 13,
      "type": "object",
      "properties": {
        "testAllOpenedOnAnySave": {
          "title": "Test *all* opened files on *any* save action",
          "description": "Should test all opened files if something was saved?",
          "type": "boolean",
          "default": false,
          "order": 1
        }
      }
    }
  }
}
