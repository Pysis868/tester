{
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "globals": {
      "atom": "true",
      "document": "true",
      "expect": "true",
      "spyOn": "true"
    },
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "import/extensions": 0,
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "no-restricted-syntax": 0,
      "strict": 0,
      "class-methods-use-this": 0,
      "no-console": 0,
      "no-param-reassign": 0,
      "no-useless-escape": 0,
      "prefer-rest-params": 0,
      "max-len": 0,
      "spaced-comment": ["error", "always", { "block": { "exceptions": ["@flow"] } }]
    }
}
